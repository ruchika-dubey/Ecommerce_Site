@model Ecommerce_Site.Models.LaptopModel
@{ ViewData["Title"] = "Delete"; }
<br />

<h2 class="text-info">Delete Product Type</h2>
<form asp-action="Delete" method="post">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="ProductName"></label>
        </div>
        <div class="col-5">
            <input asp-for="ProductName" readonly="readonly" class="form-control" />
        </div>
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="ImageUrl"></label>
        </div>
        <div class="col-5">
            <input asp-for="ImageUrl" readonly="readonly" class="form-control" />
        </div>
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Price"></label>
        </div>
        <div class="col-5">
            <input asp-for="Price" readonly="readonly" class="form-control" />
        </div>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Description"></label>
        </div>
        <div class="col-5">
            <input asp-for="Description" readonly="readonly" class="form-control" />
        </div>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-danger" value="Delete" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
     
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
