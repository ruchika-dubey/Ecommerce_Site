@model Ecommerce_Site.Models.LaptopModel
@{ ViewData["Title"] = "Details"; }
<br />
<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <h2 class="text-info">Product Details</h2>

        <div class="container">

            <div class="row">
                <div class="col-md-4">
                    <img src="@Html.DisplayFor(model => model.ImageUrl)" class="img-fluid img-thumbnail" alt="Responsive image">
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-10">
                            RS.@Html.DisplayFor(model => model.Price)/-
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    </dl>
                    <a asp-action="AddToCart" asp-route-id="@Model.ID" class="btn btn-outline-primary btn-lg btn-block">Add To Cart</a>
                </div>

            </div>
            <br />
            <div>

                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </div>
        </div>
    </form>
        @section Scripts{
            @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }

