@using Ecommerce_Site.Models;

@model List<LaptopModel>
@{ ViewData["Title"] = "Home Page"; }
div>

    <br />
    <br />
    <div class="row">
        @foreach (var product in Model)
        {
<div class="col-4">
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">
                <label style="font-size: 23px;color: steelblue">@product.ProductName</label>
            </h4>
        </div>
        <img src="@product.ImageUrl" alt="Card Image" class="card-img-top" style="height: 300px;" />
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <label style="font-size: 20px;color: #a51313"><b>Price : @product.Price</b></label>
                </div>
                @if (User.Identity.Name != "Admin@gmail.com")
                {

<a asp-action="Details" asp-controller="Home" asp-route-id="@product.ID" class="btn btn-success pull-right btn-outline-info">Deatils</a>                }
            </div>
        </div>
    </div>
</div>}
    </div>
    @section scripts{
        <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
        <script type="text/javascript">
        $(function(){
            var Orded = '@TempData["Orded"]'
            if (Orded!='') {
                alertify.success(Orded);
            }

        })
        </script>
    }



